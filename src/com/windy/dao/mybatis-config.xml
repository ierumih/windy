<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration

PUBLIC "-//mybatis.org//DTD Config 3.0//EN"

"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	
<typeAliases>
	<typeAlias type="com.windy.vo.User" alias="user"/>
	<typeAlias type="com.windy.vo.Page" alias="page"/>
	<typeAlias type="com.windy.vo.Board" alias="board"/>
	<typeAlias alias="course" type="com.windy.vo.Course"/>
</typeAliases>


<environments default="development">
        <environment id="development">
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver" />
                <property name="url" value="jdbc:mysql://localhost:3306/windy?characterEncoding=UTF8&amp;serverTimezone=UTC" />
                <property name="username" value="pcss" />
                <property name="password" value="1234" />
            </dataSource>
        </environment>
    </environments>

<mappers>
	<mapper resource="com/windy/dao/mapper.xml"/>
</mappers>

</configuration>



